{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["esnext"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "typeRoots": ["src/types", "./node_modules/@types"]
  },
  "lib": ["esnext"],
  "include": ["./types", "src/**/*"],
}